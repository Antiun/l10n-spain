<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="l10n_es_pos_simplified_invoice_report_receipt" inherit_id="point_of_sale.report_receipt">

    <xpath expr="//div[@class='col-xs-12 text-center']/h2" position="before">
            <span>Simplified Invoice</span><br />
            <t t-esc="o.pos_reference"/>
    </xpath>

    <xpath expr="//div[@class='col-xs-12 text-center']/h2" position="after">
            <t t-esc="o.user_id.company_id.name"/><br />
            NIF: <t t-esc="o.user_id.company_id.vat"/><br />
            <t t-if="o.partner_id">
                Customer data<br />
                Name: <t t-esc="o.partner_id.name"/><br />
                VAT: <t t-esc="o.partner_id.vat"/><br />
                Address: <t t-esc="o.partner_id.street"/><br />
            </t>
    </xpath>

    <xpath expr="//div[@class='col-xs-12 text-center']/h2" position="attributes">
        <attribute name="style">display:none;</attribute>
    </xpath>

</template>
</data>
</openerp>
